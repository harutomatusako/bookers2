<% if @book.errors.any? %>
  <%= @book.errors.count %>errors
  <% @book.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
<% end %>


<div class="container">
<div class="row">
  <div class="col-md-3">
     <%= render 'users/user', user: @user %>
     <%= render 'books/book', book: @book_new %>
  </div>

  <div class="col-md-8 offset-md-1">

   <h2>Book detail</h2>
    <table class="table table-hover table-inverse">

    <thead>
     <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
     </tr>
    </thead>


  <tbody>
      <tr>
          <td><%= link_to user_path(@book.user) do  %>
        <%= attachment_image_tag @book.user, :profile_image,:fill, 100, 100 %>
          <% end %></td>
           <td><%= link_to user_path(@book.user) do  %>
        <%=@book.user.name %>
          <% end %></td>

        <td><%= @book.title %></td>
        <td><%= @book.body %></td>


        <% if @user.id == current_user.id %>

        <td><%=link_to "Edit",edit_book_path %></td>
        <td><%=link_to "Destroy",book_path,method: :delete  %></td>
        <% end %>
        <td></td>
      </tr>
  </tbody>
  </table>

  </div>

  </div>
  </div>

