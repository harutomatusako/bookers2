 <h1>New book</h1>
   <%= form_with model:book, local:true do |f| %>

    <div class="form-group">
    <label for="book_title">Title</label>
    <h4><%= f.text_field :title %></h4>
    </div>
    
    <div class="form-group">
    <label for="book_opinion">Opinion</label>
    <h4><%= f.text_area :body %></h4>
    </div>
  
    <div class="form-group">
    <%= f.submit 'Create Book' %>
    </div>
   <% end %>
   